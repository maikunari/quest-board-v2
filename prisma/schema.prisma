generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// â”€â”€â”€ Auth â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  displayName   String?   // Display name fallback (used in leaderboard, emails)

  plan          Plan      @default(FREE)
  stripeCustomerId    String?   @unique
  stripeSubscriptionId String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  asanaToken    String?   // Per-user Asana Personal Access Token

  soundEnabled  Boolean   @default(true)
  streakFreezes Int       @default(0)     // available streak freezes (Pro: 1/week)
  lastLoginDate DateTime? @db.Date        // for login streak tracking
  
  // â”€â”€â”€ Streak Extensions â”€â”€â”€
  shieldActive  Boolean   @default(false)
  shieldUsedAt  DateTime?
  comebackBonusExpires DateTime?
  weeklyXp      Int       @default(0)
  timezone      String    @default("UTC")

  accounts      Account[]
  sessions      Session[]
  
  quests        Quest[]
  completions   Completion[]
  dayStats      DayStats[]
  dailyTemplates DailyTemplate[]
  achievements  UserAchievement[]
  streak        Streak?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}
 
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}

// â”€â”€â”€ Streaks â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

model Streak {
  id            String   @id @default(cuid())
  userId        String   @unique
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  lastActiveDate DateTime? @db.Date
  frozenToday   Boolean  @default(false) // streak freeze used today
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

// â”€â”€â”€ Achievements â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String   // key into ACHIEVEMENTS constant
  unlockedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, achievementId])
  @@index([userId])
}

enum Plan {
  FREE
  PRO
  TEAMS
}

// â”€â”€â”€ Quests â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

enum QuestType {
  main
  side
  daily
}

model Quest {
  id          String      @id @default(cuid())
  userId      String?     // null for legacy/migration quests
  date        DateTime    @db.Date
  type        QuestType
  title       String
  subtitle    String?
  description String?
  icon        String      @default("âš”ï¸")
  points      Int
  asanaTaskId String?
  order       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user        User?       @relation(fields: [userId], references: [id])
  completions Completion[]

  @@index([date])
  @@index([type])
  @@index([asanaTaskId])
  @@index([userId, date])
}

model Completion {
  id          String   @id @default(cuid())
  userId      String?  // null for legacy
  visitorId   String   @default("default")
  questId     String
  date        DateTime @db.Date
  completedAt DateTime @default(now())

  user  User?  @relation(fields: [userId], references: [id])
  quest Quest  @relation(fields: [questId], references: [id], onDelete: Cascade)

  @@unique([visitorId, questId, date])
  @@index([date])
  @@index([questId])
  @@index([userId, date])
}

model DayStats {
  id              String   @id @default(cuid())
  userId          String?  // null for legacy
  date            DateTime @db.Date
  totalPoints     Int      @default(0)
  questsCompleted Int      @default(0)
  questsTotal     Int      @default(0)
  updatedAt       DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@index([date])
}

// Daily quest templates - auto-created each day
model DailyTemplate {
  id          String   @id @default(cuid())
  userId      String?  // null = global templates, set = user-specific
  title       String
  subtitle    String?
  description String?
  icon        String   @default("ğŸ“‹")
  points      Int      @default(3)
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
}

